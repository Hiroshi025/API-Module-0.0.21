{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node10",
    "baseUrl": "./",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@backend/*": ["src/backend/*"],
      "@helpers/*": ["src/helpers/*"],
      "@typings/*": ["src/typings/*"],
      "@utils/*": ["src/lib/utils/*"],
      "@config/*": ["config/*"],
      "@lib/*": ["src/lib/*"],
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "__tests__", "js"]
}
