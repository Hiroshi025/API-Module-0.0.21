  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="icon" type="image/png" href="/assets/images/logo.jpg" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
    rel="stylesheet" />
  <title>Sofia Projects - Login</title>

  <!-- Bootstrap core CSS -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Additional CSS Files -->
  <link rel="stylesheet" href="/css/fontawesome.css" />
  <link rel="stylesheet" href="/css/login.css" />
  <link rel="stylesheet" href="/css/animated.css" />
  <link rel="stylesheet" href="/css/owl.css" />
  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
  <!-- ***** Preloader Start ***** -->
  <div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
      <span class="dot"></span>
      <div class="dots">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </div>
  <!-- ***** Preloader End ***** -->

  <div class="intro-banner">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <img src="/assets/images/logo.jpg" alt="Logo" />
          <h1>Welcome to Sofia Projects</h1>
          <h4>Login or Register to continue</h4>

          <!-- Login/Register Form -->
          <div class="form-container mt-4">
            <div class="form-group">
              <a href="#" style="text-decoration: none;"></a>
              <button class="btn btn-outline-primary w-100 mb-3">
                <i class="fab fa-google"></i> Login with Google
              </button>
              </a>
              <a href="/auth/login" style="text-decoration: none;">
                <button class="btn btn-outline-info w-100 mb-3">
                  <i class="fab fa-discord"></i> Login with Discord
                </button>
              </a>
            </div>

            <div class="form-divider">
              <span>OR</span>
            </div>

            <form action="#" method="post" class="login-form">
              <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="Email Address" required />
              </div>
              <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="Password" required />
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Login</button>
              </div>
            </form>

            <div class="mt-3 text-center">
              <span>Don't have an account?</span>
              <a href="/auth/register">Register Here</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <div class="container text-center">
      <p>Â© 2024 Sofia Projects - All rights reserved</p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/js/owl-carousel.js"></script>
  <script src="/js/animation.js"></script>
  <script src="/js/imagesloaded.js"></script>
  <script src="/js/custom.js"></script>

</body>

</html>