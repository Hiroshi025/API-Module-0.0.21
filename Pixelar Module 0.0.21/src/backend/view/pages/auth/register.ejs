<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <%- include('../../partials/meta'); %>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="icon" type="image/png" href="/assets/images/logo.jpg" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
    rel="stylesheet" />
  <title>Sofia Projects - Register</title>

  <!-- Bootstrap core CSS -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/register.css" />

  <!-- Additional CSS Files -->
  <link rel="stylesheet" href="/css/fontawesome.css" />
  <link rel="stylesheet" href="/css/animated.css" />
  <link rel="stylesheet" href="/css/owl.css" />
  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
  <div class="intro-banner">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <img src="/assets/images/logo.jpg" alt="Logo" />
          <h1>Welcome to Sofia Projects</h1>
          <h4>Register to get started</h4>
        </div>
      </div>
    </div>
  </div>

  <!-- Registration Form -->
  <div class="form-container">
    <form id="registration-form">
      <!-- Name and Surname -->
      <div class="form-group">
        <label for="first-name">First Name</label>
        <input type="text" class="form-control" id="first-name" placeholder="Enter your first name" required />
      </div>
      <div class="form-group">
        <label for="last-name">Last Name</label>
        <input type="text" class="form-control" id="last-name" placeholder="Enter your last name" required />
      </div>

      <!-- Age and Email -->
      <div class="form-group">
        <label for="age">Age</label>
        <input type="number" class="form-control" id="age" placeholder="Enter your age" required />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Enter your email" required />
      </div>

      <!-- Register with Discord -->
      <div class="form-group">
        <a href="/auth/login" style="text-decoration: none;">
          <button class="btn btn-outline-info w-100 mb-3">
            <i class="fab fa-discord"></i> Register with Discord
          </button>
        </a>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary w-100">
        Register
      </button>
    </form>

    <div class="form-divider">
      <span>OR</span>
    </div>

    <p class="text-center">Already have an account? <a href="/auth">Login here</a></p>
  </div>

  <!-- Scripts -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/js/custom.js"></script>
</body>

</html>